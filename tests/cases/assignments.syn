let x: number
declare const cond: boolean
if (cond) {
    x = 1
}

const y = x // Variable 'x' is used before being assigned

let x2!: number
const y2 = x2 // no error


let x3: number | undefined
if (cond) {
    x3 = 1
}

const y3 = x3 // no error

type MaybeNumber = number | undefined
let x4: MaybeNumber
if (cond) {
    x4 = 1
}

const y4 = x4 // no error

let x5: number = 0
if (cond) {
    x5 = 1
}

const y5 = x5 // no error