type Stringy<T> = { [P in keyof T]: string }

function stringy<T>(t: (reify T) & type.Object): Stringy<T> {
    const r: Partial<Stringy<T>> = {}
    for (const [k, v] of Object.entries(t)) {
        r[k as keyof T] = (() => {
            switch (type.tag(v)) {
                case 'literal': return String(v)
                case 'object':  return '<object>'
                case 'intrinsic': return v.description
                default: return 'never'
            }
        })()
    }

    return r as Stringy<T>
}

interface Foo {
    foo: number
    bar: 'bar'
}

console.log(stringy(reify Foo))
// { foo: 'type.number', bar: 'bar' }

const f = reify<T> keyof T
console.log(f(reify Foo))
// Union(2) [Set] { 'foo', 'bar' }