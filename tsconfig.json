{
    "compilerOptions": {
      "target": "ESNext",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "rootDir": "src",
      "outDir": "./out",
      "strict": true,
      "removeComments": true,
      "declaration": false, // We're copying the declaration file from `typescript`
      "allowArbitraryExtensions": true,
    },
    "include": ["src"]
  }
  